gris_oscuro = #444
gris_texto = #7A7A7A
azul = #22bce0
naranja = #dd4f24

@font-face {
	font-family: 'iconitos';
	src:url('../fonts/icomoon.eot?-etyqoi');
	src:url('../fonts/icomoon.eot?#iefix-etyqoi') format('embedded-opentype'),
		url('../fonts/icomoon.woff?-etyqoi') format('woff'),
		url('../fonts/icomoon.ttf?-etyqoi') format('truetype'),
		url('../fonts/icomoon.svg?-etyqoi#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

a
	color naranja

body
	background #e8e8e8
	color gris_oscuro
	font-family Arial
	font-size 16px

figure
	margin 0

footer
	background naranja
	color rgba(white, .5)
	padding 1em 0
	text-align center
	width 100%

	h3
		font-size 14px
		font-weight normal

		strong
			display block

		.mejor
			&:before
			&:after
				content " - "

header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0,0,0,.2)
	color white
	padding .5em
	position relative
	overflow hidden
	z-index 2


	.logo
		border-right 1px solid azul
		width 60px
		float left

		img
			width 52px
	.titular
		margin 0 80px 0 70px
		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0

		.filtro
			color azul
			font-size 14px
			font-style italic
			font-weight bold
			text-decoration none

		.publicar
			background naranja
			color white
			float right
			font-style italic
			padding .2em .5em
			text-decoration none
			text-shadow 1px 1px 0px black

			&:before
				font-family "iconitos"
				content "\e600"
				display inline-block
				margin 0 3px 0 0
				text-shadow none


	.usuario
		position absolute
		top 10px
		right 10px
		.avatar
			margin 0 1.1em 0 0
			padding 0
			z-index 2
			position relative
			img
				width 50px
				border-radius 50%


		.flechita
			background naranja
			color white
			display block
			position absolute
			top 15px
			right 0
			padding 2px
			text-align right
			text-decoration none
			width 50%
			z-index 0

			&:before
				font-family "iconitos"
				content "\e602"
				display block
				margin 2px 0 0 1px
				font-size 1.2em
				vertical-align top
				text-shadow 1px 1px 0px black



nav 
	background azul
	border-left 15px solid white
	position relative

	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		left 0
		position absolute
		top 0



	.menu
		margin 0
		padding 0
		padding-left 1em
		height 40px
		line-height 40px
		white-space nowrap
		overflow-x auto

		&::-webkit-scrollbar
			display none

		li
			display inline-block
			// float left
			// list-style none
			padding 0
			margin 0
			

			a
				text-decoration none
				display block
				padding 0 .4em
				color white
	
				&:hover
					background rgba(black, 0.1)
	
.posts
	padding 0.5em
	.post
		background white
		border-radius 0 0 .5em .5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color gris_texto
		margin-bottom .5em

		.acciones
			border-top 3px solid azul
			padding .5em
			overflow hidden

			.datos
				float right

				.comentarios
					background gris_oscuro
					border-radius 3px
					color white
					margin 0 1em 0 0
					padding 2px 5px
					text-decoration none
					position relative

					&:after
						content ""
						border-top 5px solid gris_oscuro
						border-left 3px solid transparent
						border-right 3px solid transparent
						position absolute
						bottom -5px
						right 4px

				.estrellita
					text-decoration none
					&:before
						font-family iconitos
						content "\e601"
						vertical-align middle
						color #fdd809
						font-size 1.2em
						text-shadow 1px 1px 0px rgba(black, .7)

					

			.votos
				float left
				
				

				.down
				.up
					text-decoration none
					&:before
						font-family "iconitos"
						font-size 1.5em
						vertical-align middle
						
				.down
					color red
					&:before
						content "\e602"
						
				.up
					color green
					&:before
						content "\e603"

		.descripcion
			.detalles
				height 160px
				margin-left 130px
				
				.autor
					margin .5em 0 2em 0
				
				.fecha
					float right
					margin 0 1em 0 0

				.tag
					background azul
					border-radius .5em
					color white
					padding 0.2em .5em
					text-decoration none

				.titulo
					color gris_oscuro
					font-size 18px
					font-style italic
					margin 0
					padding .5em .5em 0 0
			.imagen
				float left
				img
					height 160px
					vertical-align top
					width 120px

@media screen and (min-width: 768px)
	header
		.titular
			.publicar
				position relative
				padding-left 3em
				font-size 1.1em
				&:before
					left 0
					font-size 2.5em
					position absolute
					top -10px

	.posts
		.post
			width 48%
			display inline-block
			vertical-align top

			&:nth-child(odd)
				margin-right 2%



	

	

				
