gris_oscuro = #444
azul = #22bce0

body
	background #e8e8e8
	color gris_oscuro
	font-family Arial
	font-size 16px

header
	background gris_oscuro
	color white
	padding .5em

	.logo
		border-right 1px solid azul
		width 60px

		img
			width 52px
	.titular
		margin 0 80px 0 70px
		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0

	.usuario
		.avatar
			padding 0
			margin 0
			img
				width 50px
				border-radius 50%

nav 
	background azul

.left
	float left

.right
	float right